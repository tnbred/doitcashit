<div class="container-fluid pale-bg">
<div class="row col-md-offset-4 col-md-4 big-div top-space"> 
<div class="panel panel-default">
  <div class="panel-body">
<h2>Log in</h2>
<form class="form-horizontal" method="POST">
  {{#if message}}
  <div class="form-group has-error">
    <div class="col-sm-offset-2 col-sm-8">
      <input type="email" class="form-control" id="inputEmail" placeholder="Email" aria-describedby="helpBlockEmail" name="email">
          <span id="helpBlockEmail" class="help-block">{{this.message}}.</span>
    </div>
  </div>
  {{else}}
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="email">
    </div>
  </div>
  {{/if}}

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <input type="checkbox"> Remember me
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
      <button type="submit" class="btn btn-info col-sm-offset-2 col-sm-8">Log in</button>
  </div>
  <hr>
  <div class="row col-sm-offset-2 col-sm-10">
      <em>New to Do it & Cash it ?</em>
  </div>
  <div class="form-group">
  <a href="/signup"><button type="button" class="btn btn-success col-sm-offset-2 col-sm-8">Sign up!</button></a>
  </div>
</form>
</div>
 </div>
</div>
</div>
