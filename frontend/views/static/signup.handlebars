<div class="container-fluid pale-bg">
<div class="row col-md-offset-4 col-md-4 big-div top-space"> 
<div class="panel panel-default">
  <div class="panel-body">
<h2>Sign up</h2>
<form class="form-horizontal" method="POST">
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <input type="text" class="form-control" id="inputName" placeholder="Name" name="name">
    </div>
  </div>
  {{#if message}}
  <div class="form-group has-error">
    <div class="col-sm-offset-2 col-sm-8">
      <input type="email" class="form-control" id="inputEmail" placeholder="Email" aria-describedby="helpBlockEmail" name="email">
          <span id="helpBlockEmail" class="help-block">{{this.message}}.</span>
    </div>
  </div>
  {{else}}
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <input type="email" class="form-control" id="inputEmail" placeholder="Email" name="email">
    </div>
  </div>
  {{/if}}
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <input type="date" class="form-control" id="inputDate" placeholder="Birthdate" name="bday">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-8">
      <input type="password" class="form-control" id="inputPassword2" placeholder="Re-Enter password" name="password2">
    </div>
  </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success col-sm-offset-2 col-sm-8">Sign up</button>
      </div>
</form>
</div>
 </div>
</div>
</div>
