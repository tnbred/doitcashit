<%= render 'shared/menu_inbox'%>
<div class="search2">
	<% form_tag new_message_path, :action=>'search', :method => 'get' do %>
     <%=text_field_tag :search, params[:search], :id => 'search_field', :value=>'find a user',
     	 :onfocus=>"if(this.value=='find a user')this.value=''"%>
     <%=submit_tag "Search", :name => nil, :id=>'submit_search'%> 
     <%=hidden_field :search_done, :value=> true%>
<% end %>
</div>
 
 <%if !params[:search_done].nil?%>
 	<%@users=User.search(params[:search]).paginate(:page => params[:page],:per_page => 10)%>

	<ul>
  		<div class="search_message">
 			<% @users.each do |user| %>
   				<li><%=link_to user.name, new_message_path+"?user_to=#{user.name}"%></li>
  			<% end %>

 		 </div>
	</ul>
<%end%>

  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="message">Send a new message</h1>
        <%= render 'message_form' %>
      </td>
    </tr>
  </table>